doctype html
html
    head(lang='en')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='')
        meta(name='author', content='')

        link(rel='icon', href='../images/Golf_Pin.ico')

        link(rel='stylesheet', type='text/css', href='../bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='../stylesheets/style.css')
        link(rel='stylesheet', type='text/css', href='../stylesheets/custom-bootstrap.css')
        link(rel='stylesheet', type='text/css', href='../bower_components/OpenLayers3/css/ol.css')
        link(rel='stylesheet', type='text/css', href='../bower_components/sidr/dist/stylesheets/jquery.sidr.light.css')

        // These MUST be placed in the header
        script(type='text/javascript', src='../bower_components/jquery/dist/jquery.min.js')
        script(type='text/javascript', src='../bower_components/sidr/dist/jquery.sidr.min.js')
        script(src='//maps.google.com/maps/api/js?v=3&sensor=false')

        script(type='text/javascript').
            $(document).ready(function() {
                $('#left-menu').sidr({
                    name: 'sidr-left',
                    side: 'left' // By default
                });
                $('#right-menu').sidr({
                    name: 'sidr-right',
                    side: 'right'
                });
            });

        script.
            $(function () {
                $("#example").popover();
            });

        title eSeismic Test Harness

    body.index_body
        header
            .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
                .navbar-inner
                    .container
                        .header
                            a.navbar-brand(href='/') eSeismic
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a#left-menu(href='#sidr-left') Background Maps
                                li
                                    a#right-menu(href='#sidr-right') Progress Information
        main
            .container-fluid
                .row-fluid
                p
                    span.label.label-default EPSG:3857 Long & Lat :
                    span#mouse4326.label.label-info
                    .span12
                        #bingMap.map
                        #googleMap
                            #gMap.map
                            #olMap.map

            #sidr-left
                ul
                   li
                      a(href='#')
                         b Base Map Layer
                   li
                      label(for='bingMapsBaseLayer')
                      input(type='radio', name='baseMap', value='bingMapsBaseLayer', onclick='toggleControl(this);', checked='')
                      | Bing Maps
                   li
                      label(for='googleMapsBaseLayer')
                      // The # in the value below disables this
                      input(type='radio', name='baseMap', value='#googleMapsBaseLayer', onclick='toggleControl(this);')
                      | Google Maps

            #sidr-right
                ul
                   li
                      a(href='#')
                         b Golf
                   li
                      a(href='#') Rounds Played
                   li
                      label(for='roundsPlayed')
                      input(type='checkbox', name='overlay', value='withRoundOfGolf', onclick='toggleControl(this);', autocomplete='off', checked='')
                      | Round Of Golf

        footer
            script(type='text/javascript', src='../bower_components/bootstrap/dist/js/bootstrap.min.js')
            script(type='text/javascript', src='../bower_components/OpenLayers3/build/ol.js')
            script(type='text/javascript', src='../javascripts/roundOfGolf.js')

